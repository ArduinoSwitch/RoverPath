<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splash"
    >

    <fragment
        android:id="@+id/splash"
        android:name="com.seat.feature.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash_fragment"
        >
        <action
            android:id="@+id/nav_to_main"
            app:destination="@+id/main"
            app:popUpTo="@id/main_graph"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/nav_to_on_boarding"
            app:destination="@+id/on_boarding"
            app:popUpTo="@id/main_graph"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/on_boarding"
        android:label="OnBoarding"
        android:name="com.seat.feature.onboarding.OnBoardingFragment"
        tools:layout="@layout/on_boarding_fragment"
        >
        <action
            android:id="@+id/nav_to_main"
            app:destination="@+id/main"
            app:popUpTo="@id/main_graph"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/main"
        android:name="com.seat.feature.main.MainFragment"
        tools:layout="@layout/main_fragment"
        android:label="MainFragment"
        />

    <action
        android:id="@+id/open_dialog"
        app:destination="@+id/dialog_graph"
        >
        <argument
            android:name="data"
            app:argType="com.seat.commons.navigation.dialog.DialogData"
            />
    </action>

    <include app:graph="@navigation/dialog_graph" />

</navigation>
